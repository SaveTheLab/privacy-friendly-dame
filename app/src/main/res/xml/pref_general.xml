<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/title_game_rules">
        <SwitchPreference
            android:id="@+id/pref_rule_flying_dame"
            android:key="pref_rule_flying_dame"
            android:title="@string/pref_title_rule_flying_dame"
            android:summary="@string/pref_desc_rule_flying_dame"
            android:defaultValue="false"/>
        <SwitchPreference
            android:id="@+id/pref_rule_white_begins"
            android:key="pref_rule_white_begins"
            android:title="@string/pref_title_rule_white_begins"
            android:summary="@string/pref_desc_rule_white_begins"
            android:defaultValue="false"/>
        <SwitchPreference
            android:id="@+id/pref_rule_white_begins"
            android:key="pref_rule_white_begins"
            android:title="@string/pref_title_rule_white_begins"
            android:summary="@string/pref_desc_rule_white_begins"
            android:defaultValue="false"/>
    </PreferenceCategory>
</PreferenceScreen>
